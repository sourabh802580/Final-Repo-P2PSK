                        </span>
                    </span>
                    <span class="app-brand-text demo text-heading fw-semibold">P2PERP</span>
                </a>
                <!-- /Logo -->
                <div class="authentication-inner row m-0">

                    <!-- Left Side Illustration -->
                    <div class="d-none d-lg-flex col-lg-7 col-xl-8 align-items-center justify-content-center p-12 pb-2">
                        <div>
                            <img src="~/Content/images/illustrations/NewBG.png"
                                 class="authentication-image-model d-none d-lg-block" alt="auth-model" />
                        </div>
                    </div>
                    <!-- /Left Section -->
                    <!-- Right Side Form -->
                    <div class="d-flex col-12 col-lg-5 col-xl-4 align-items-center authentication-bg position-relative py-sm-5 px-12 py-4 my-8">
                        <div class="w-px-400 mx-auto pt-12 pt-lg-0">
                            <h4 class="mb-8 text-primary fw-semibold text-capitalize">Reset Password 🔒</h4>
                            <p class="mb-5 text-warning fs-5">Your new password must be different from previously used passwords</p>

                            <!-- Reset Password Form Posts to Account/ChangePassword -->
                            @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @id = "formAuthentication", @class = "mb-5", data_page = "changePassword" }))
                            {
                                <!-- New Password Input -->
                                <div class="mb-5 form-password-toggle form-control-validation">
                                    <div class="input-group input-group-merge">
                                        <div class="form-floating form-floating-outline">
                                            @Html.PasswordFor(m => m.Password, new
                                            {
                                                @class = "form-control",
                                                @id = "password",
                                                placeholder = "••••••••••",
                                                aria_describedby = "password"
                                            })
                                            <label for="password">New Password</label>
                                        </div>
                                        <!-- Eye icon to toggle show/hide password -->
                                        <span class="input-group-text cursor-pointer">
                                            <i class="icon-base ri ri-eye-off-line icon-20px"></i>
                                        </span>
                                    </div>
                                </div>

                                <!-- Confirm Password Input -->
                                <div class="mb-5 form-password-toggle form-control-validation">
                                    <div class="input-group input-group-merge">
                                        <div class="form-floating form-floating-outline">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new
                                            {
                                                @class = "form-control",
                                                @id = "confirm-password",
                                                placeholder = "••••••••••",
                                                aria_describedby = "password"
                                            })
                                            <label for="confirm-password">Confirm Password</label>
                                        </div>
                                        <!-- Eye icon toggle -->
                                        <span class="input-group-text cursor-pointer">
                                            <i class="icon-base ri ri-eye-off-line icon-20px"></i>
                                        </span>
                                    </div>
                                </div>

                                <!-- Submit Button -->
                                <button type="submit" class="btn btn-primary d-grid w-100 mb-5">Set new password</button>

                                <!-- Back to Login Link -->
                                <div class="text-center">
                                    <a href="@Url.Action("MainLogin", "Account")" class="d-flex align-items-center justify-content-center">
                                        <i class="icon-base ri ri-arrow-left-s-line scaleX-n1-rtl icon-20px me-1_5"></i>
                                        Back to login
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                    <!-- /Reset Password -->
                </div>
            </div>
        </div>
        <!-- / Content -->
    </div>

    <!-- JS Libraries -->
    <script src="~/Scripts/sweetalert2@11.js"></script>
    <script src="~/Scripts/config.js"></script>
    <script src="~/Scripts/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/node-waves.js"></script>
    <script src="~/Scripts/autocomplete-js.js"></script>
    <script src="~/Scripts/pickr.js"></script>
    <script src="~/Scripts/perfect-scrollbar.js"></script>
    <script src="~/Scripts/hammer.js"></script>
    <script src="~/Scripts/i18n.js"></script>
    <script src="~/Scripts/menu.js"></script>

    <!-- Form Validation -->
    <script src="~/Scripts/popular.js"></script>
    <script src="~/Scripts/bootstrap5.js"></script>
    <script src="~/Scripts/auto-focus.js"></script>

    <!-- Main JS -->
    <script src="~/Scripts/main.js"></script>
    <script src="~/Scripts/pages-auth.js"></script>
    <script src="~/Scripts/Login.js"></script>

    <script>
        // Toggle show/hide password on eye icon click
        document.querySelectorAll('.form-password-toggle i').forEach(function (icon) {
            icon.addEventListener('click', function (event) {
                event.preventDefault();
                const inputGroup = icon.closest('.input-group');
                const input = inputGroup.querySelector('input');

                if (input) {
                    const isPassword = input.type === 'password';
                    input.type = isPassword ? 'text' : 'password';

                    icon.classList.toggle('ri-eye-line', isPassword);
                    icon.classList.toggle('ri-eye-off-line', !isPassword);
                }
            });
        });
    </script>
</body>
</html>
