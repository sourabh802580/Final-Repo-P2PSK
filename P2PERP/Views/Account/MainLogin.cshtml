                        </svg>
                    </span>
                </span>
                <span class="app-brand-text demo text-heading fw-semibold">P2PERP</span>
            </div>
            <!-- /Logo -->
            <div class="authentication-inner row m-0">
                <!-- Left Section (Illustration & Decoration) -->
                <div class="d-none d-lg-flex col-lg-7 col-xl-8 align-items-center justify-content-center p-12 pb-2">
                    <div>
                        <!-- Login Illustration -->
                        <img src="~/Content/images/illustrations/NewBG.png"
                             class="authentication-image-model d-none d-lg-block" alt="auth-model" />
                    </div>
                </div>
                <!-- /Left Section -->
                <!-- Right Section (Login Form) -->
                <div class="d-flex col-12 col-lg-5 col-xl-4 align-items-center authentication-bg position-relative py-sm-5 px-12 py-4 my-12">
                    <div class="w-px-400 mx-auto pt-12 pt-lg-0">

                        <!-- Welcome Message -->
                        <h4 class="mb-8 text-primary fw-semibold">Welcome to P2PERP! 👋🏻</h4>
                        <p class="mb-5 text-warning fs-5 text-capitalize">Please sign-in to your account</p>

                        <!-- Login Form -->
                        @using (Html.BeginForm("MainLogin", "Account", FormMethod.Post, new { @id = "formAuthentication", @class = "mb-5", data_page = "login" }))
                        {
                            <!-- Email/Username -->
                            <div class="form-floating form-floating-outline mb-5 form-control-validation">
                                @Html.TextBoxFor(m => m.EmailAddress, new
                                {
                                    @class = "form-control",
                                    @id = "email",
                                    placeholder = "Enter your email or username",
                                    autofocus = "autofocus"
                                })
                                <label for="email">Email or Username</label>
                            </div>

                            <!-- Password with toggle eye icon -->
                            <div class="mb-5">
                                <div class="form-password-toggle form-control-validation">
                                    <div class="input-group input-group-merge">
                                        <div class="form-floating form-floating-outline">
                                            @Html.PasswordFor(m => m.Password, new
                                            {
                                                @class = "form-control",
                                                @id = "password",
                                                placeholder = "••••••••••••",
                                                aria_describedby = "password"
                                            })
                                            <label for="password">Password</label>
                                        </div>
                                        <!-- Eye icon to toggle password visibility -->
                                        <span class="input-group-text cursor-pointer">
                                            <i class="icon-base ri ri-eye-off-line icon-20px"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <!-- Forgot Password Link -->
                            <div class="mb-5 d-flex justify-content-end flex-wrap py-2">
                                <a href="@Url.Action("ForgotPassword", "Account")" class="float-end mb-1">
                                    <span>Forgot Password?</span>
                                </a>
                            </div>

                            <!-- Login Button -->
                            <button type="submit" class="btn btn-primary d-grid w-100">Login</button>
                        }
                    </div>
                </div>
                <!-- /Login Form -->
            </div>
        </div>
        <!-- /Right Section -->
    </div>

    <!-- JS Libraries -->
    <script src="~/Scripts/sweetalert2@11.js"></script>
    <script src="~/Scripts/config.js"></script>
    <script src="~/Scripts/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/node-waves.js"></script>
    <script src="~/Scripts/autocomplete-js.js"></script>
    <script src="~/Scripts/pickr.js"></script>
    <script src="~/Scripts/perfect-scrollbar.js"></script>
    <script src="~/Scripts/hammer.js"></script>
    <script src="~/Scripts/i18n.js"></script>
    <script src="~/Scripts/menu.js"></script>

    <!-- Form Validation -->
    <script src="~/Scripts/popular.js"></script>
    <script src="~/Scripts/bootstrap5.js"></script>
    <script src="~/Scripts/auto-focus.js"></script>

    <!-- Main JS -->
    <script src="~/Scripts/main.js"></script>
    <script src="~/Scripts/pages-auth.js"></script>
    <script src="~/Scripts/Login.js"></script>

    <script>
        $(document).ready(function () {
            $(document).ready(function () {
                if (window.location.pathname === "/Account/MainLogin") {

                    for (let i = 0; i < 5; i++) {
                        history.pushState(null, "", location.href);
                    }

                    // Listen for popstate (back/forward)
                    window.addEventListener("popstate", function (event) {
                        // Push state again to prevent going back
                        history.pushState(null, "", location.href);
                    });

                    console.log("Back navigation blocked on login page.");
                }
            });

            // Toggle password visibility (eye icon)
            $('.input-group-text').on('click', function () {
                let input = $('#password');
                let icon = $(this).find('i');

                if (input.attr('type') === 'password') {
                    input.attr('type', 'text');
                    icon.removeClass('ri-eye-off-line').addClass('ri-eye-line');
                } else {
                    input.attr('type', 'password');
                    icon.removeClass('ri-eye-line').addClass('ri-eye-off-line');
                }
            });
        });
    </script>
</body>
</html>
