@model P2PLibray.Account.Account

@{
    Layout = null; // No master layout, standalone login page
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/Content/images/favicon/favicon.ico" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="~/Content/font-family-inter.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/iconify-icons.css" />

    <!-- Core CSS -->
    <link rel="stylesheet" href="~/Content/node-waves.css" />
    <link rel="stylesheet" href="~/Content/pickr-themes.css" />
    <link rel="stylesheet" href="~/Content/core.css" />
    <link rel="stylesheet" href="~/Content/demo.css" />
    <link rel="stylesheet" href="~/Content/toastr.min.css" />

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/Content/perfect-scrollbar.css" />
    <link rel="stylesheet" href="~/Content/form-validation.css" />

    <!-- Page Specific CSS (Auth Page) -->
    <link rel="stylesheet" href="~/Content/page-auth.css" />

    <!-- Helpers (must be loaded before config/theme js) -->
    <script src="~/Scripts/helpers.js"></script>
    <script src="~/Scripts/template-customizer.js"></script>

    <!-- jQuery -->
    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
</head>
<body style="background-color: #58a8c8; ">
    <div class="container body-content">
        <!-- Content -->
        <div class="authentication-wrapper authentication-cover">
            <!-- Logo & Branding -->
            <div class="auth-cover-brand d-flex align-items-center gap-3">
                <span class="app-brand-logo demo">
                    <span class="text-primary">
                        <!-- Inline SVG Logo -->
