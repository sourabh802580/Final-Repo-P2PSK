                <!-- Left section containing illustration -->
                <div class="d-none d-lg-flex col-lg-7 col-xl-8 align-items-center justify-content-center p-12 pb-2">
                    <div>
                        <img src="~/Content/images/illustrations/NewBG.png"
                             class="authentication-image-model d-none d-lg-block" alt="auth-model" />
                    </div>
                </div>
                <!-- End Left section -->
                <!-- Right section for Forgot Password form -->
                <div class="d-flex col-12 col-lg-5 col-xl-4 align-items-center authentication-bg p-sm-12 p-6 my-8">
                    <div class="w-px-400 mx-auto">
                        <h4 class="mb-8 text-primary fw-semibold">Forgot Password? 🔒</h4>
                        <p class="mb-5 text-warning fs-5 text-capitalize">Enter your email and we'll send you a code to reset your password</p>

                        <!-- Forgot password form -->
                        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @id = "formAuthentication", @class = "mb-5", data_page = "sendCode" }))
                        {
                            <div class="form-floating form-floating-outline mb-5 form-control-validation">
                                <!-- Input for email address -->
                                @Html.TextBoxFor(m => m.EmailAddress, new
                                {
                                    @class = "form-control",
                                    @id = "email",
                                    placeholder = "Enter your email",
                                    autofocus = "autofocus"
                                })
                                <label for="email">Email</label>
                                @Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "text-danger" })
                            </div>

                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary d-grid w-100 mb-5 text-white">
                                Verify
                            </button>
                        }

                        <!-- Back to login link -->
                        <div class="text-center">
                            <a href="@Url.Action("MainLogin", "Account" )"
                               class="d-flex align-items-center justify-content-center">
                                <i class="icon-base ri ri-arrow-left-s-line scaleX-n1-rtl icon-20px me-1_5"></i>Back
                                to login
                            </a>
                        </div>
                    </div>
                </div>
                <!-- End Forgot Password -->
