    <script src="~/Scripts/hammer.js"></script>
    <script src="~/Scripts/i18n.js"></script>
    <script src="~/Scripts/menu.js"></script>

    <!-- Form Validation -->
    <script src="~/Scripts/popular.js"></script>
    <script src="~/Scripts/bootstrap5.js"></script>
    <script src="~/Scripts/auto-focus.js"></script>

    <!-- Main JS -->
    <script src="~/Scripts/main.js"></script>
    @*<script src="~/Scripts/pages-auth.js"></script>*@
    @*<script src="~/Scripts/Login.js"></script>*@

    <script>
        $(document).ready(function () {
            $("#formAuthentication").on("submit", function (e) {
                e.preventDefault();

                const email = $("#email").val().trim();

                if (!email) {
                    Swal.fire("Error", "Please enter your email.", "error");
                    return;
                }

                // Step 1: Verify Email
                $.ajax({
                    url: "/Account/ForgotPassword",
                    type: "POST",
                    data: { EmailAddress: email },
                    success: function (res) {
                        if (!res.success) {
                            Swal.fire("Error", res.message, "error");
                            return;
                        }

                        // Step 2: Show loader
                        Swal.fire({
                            title: "Sending...",
                            html: "Please wait while we send your reset code.",
                            allowOutsideClick: false,
                            didOpen: () => {
                                Swal.showLoading();
                            }
                        });

                        // Step 3: Send Email via AJAX
                        const code = Math.floor(100000 + Math.random() * 900000);

                        const emailObj = {
                            ToEmails: [email],
                            Subject: "Your Password Reset Code",
                            Body: `<p>Hello,</p><p>Your reset code is:</p><h2 style='color:#0066cc'>${code}</h2><p>Expires in 10 minutes.</p>`,
                            IsBodyHtml: true,
                            CcEmails: [],
                            BccEmails: [],
                            AttachmentPaths: []
                        };

                        $.ajax({
                            url: "/Account/SendEmail",
                            type: "POST",
                            contentType: "application/json; charset=utf-8",
                            data: JSON.stringify(emailObj),
                            success: function (response) {
                                Swal.close();

                                if (response.success) {
                                    Swal.fire({
                                        icon: 'success',
                                        title: 'Success',
                                        text: response.message,
                                        showConfirmButton: false,
                                        timer: 3000,
                                        willClose: () => {
                                            window.location.href = "/Account/VerifyCode";
                                        }
                                    });
                                } else {
                                    Swal.fire("Error", response.message, "error");
                                }
                            },
                            error: function () {
                                Swal.close();
                                Swal.fire("Error", "Something went wrong while sending email.", "error");
                            }
                        });
                    },
                    error: function () {
                        Swal.fire("Error", "Something went wrong while verifying email.", "error");
                    }
                });
            });
        });
    </script>

</body>
