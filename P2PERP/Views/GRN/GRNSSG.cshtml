
@{
    ViewBag.Title = "GRNSSG";
}

<div id="toastContainer" class="toast-container position-fixed top-0 end-0 p-3" style="z-index:1100;"></div>

<!-- Small Tabs -->
<ul class="nav nav-pills ps-6" id="stockTabs" role="tablist">
    <li class="nav-item">
        <button class="nav-link active small-tab" data-bs-toggle="tab" data-bs-target="#current" type="button">
            Approved PO
        </button>
    </li>
    <li class="nav-item">
        <button class="nav-link small-tab" data-bs-toggle="tab" data-bs-target="#grnlist" type="button">
            GRN List
        </button>
    </li>
</ul>

<!-- Tab Content -->
<div class="tab-content mt-2">
    <div class="tab-pane fade show active" id="current">
        @Html.Partial("_ApprovedPOListSSG")
    </div>
    <div class="tab-pane fade" id="grnlist">
        @Html.Partial("_GRNListSSG")
    </div>
</div>
<style>
    .nav-pills ~ .tab-content {
        border: none !important;
        box-shadow: none !important;
        background: transparent !important;
    }

    .content-wrapper {
        justify-content: start !important;
    }
    
</style>

