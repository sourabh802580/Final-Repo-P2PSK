        document.getElementById("lblFormattedDate").textContent = `Selected Date: ${formattedDate}`;
    }

    // If preloaded by Razor (ViewBag), display formatted version
    document.addEventListener("DOMContentLoaded", () => {
        const dateInput = document.getElementById("txtInvoiceDate");
        const serverDate = '@(ViewBag.InvoiceDate != null ? Convert.ToDateTime(ViewBag.InvoiceDate).ToString("yyyy-MM-dd") : "")';
        if (serverDate) {
            dateInput.value = serverDate;
            showFormattedDate(dateInput);
