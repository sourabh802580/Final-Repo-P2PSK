    <div class="tab-pane fade show active" id="current" role="tabpanel">
        @Html.Partial("_ConfirmItemPR")
    </div>
    <div class="tab-pane fade" id="nonmoving" role="tabpanel">
        @Html.Partial("_NonConfirmItemPR")
