            $('#Selectedquotationdate').val(start.format('DD/MM/YYYY') + ' - ' + end.format('DD/MM/YYYY'));

            // Apply client-side filter (if using column with dates in dd/mm/yyyy)
            $.fn.dataTable.ext.search.push(function (settings, data, dataIndex) {
