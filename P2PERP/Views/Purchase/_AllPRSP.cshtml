    // ===================== Update Modal Loader =====================
    var itemTableUpdate;

    $(document).on('click', '.update-btn', function () {
        var prCode = $(this).data('id');

        // Load PR Header Details
        $.ajax({
            url: '/Purchase/DetailsPartialSP',
            type: 'POST',
            data: { id: prCode },
            success: function (response) {
                if (response.success) {
                    var formattedDate = moment(response.data.RequiredDate).format("DD/MM/YYYY");

                    $("#PRCODEUpdate").text(response.data.PRCode);
                    $("#RequiredDateUpdate").text(formattedDate);
                    $("#FullNameUpdate").text(response.data.FullName);
                    $("#StatusUpdate").text(response.data.Status);

                    // Status color
                    let statusDiv = $("#StatusUpdate");
                    statusDiv.removeClass("text-success text-danger text-warning text-dark");
                    if (response.data.Status === "Approved") statusDiv.addClass("text-success");
                    else if (response.data.Status === "Rejected") statusDiv.addClass("text-danger");
                    else if (response.data.Status === "Pending") statusDiv.addClass("text-warning");
                }
            },
            error: function (xhr, status, error) {
                console.error("Details AJAX Error:", error, xhr.responseText);
            }
        });

        // Load Items Table
        loadItemTable(prCode);

        // Show Modal
        $('#UpdateModal').modal('show');
    });

    function loadItemTable(prCode) {
        // Destroy old DataTable if exists
        if ($.fn.DataTable.isDataTable('#ItemTableUpdate')) {
            itemTableUpdate.clear().destroy();
            $('#ItemTableUpdate tbody').empty();
        }

        // Init DataTable
        itemTableUpdate = $('#ItemTableUpdate').DataTable({
            responsive: true,
            paging: true,
            searching: true,
            ordering: false, 
            info: true,
            lengthChange: false,
            pageLength: 5,
            ajax: {
                url: '/Purchase/ItemPartialSP',
                type: 'POST',
                data: { id: prCode },
                dataSrc: function (json) {
                    return json.success ? json.data : [];
                }
            },
            columns: [
                {
                    data: null,
                    render: function (data, type, row, meta) {
                        return meta.row + 1;
                    }
                },
                { data: 'ItemCode' },
                { data: 'ItemName' },
                {
                    data: 'Description',
                    createdCell: function (td, cellData) {
                        if (cellData) {
                            // truncate text if too long
                            let shortText = cellData.length > 25 ? cellData.substring(0, 25) + "..." : cellData;
                            $(td)
                                .text(shortText)
                                .attr("title", cellData)
                                .attr("data-bs-toggle", "tooltip")
                                .attr("data-bs-placement", "top");
                        }
                    }
},
                {
                    data: 'RequiredQuantity',
                    render: function (data) {
                        return `<input type="number" class="form-control qty-input" value="${data}" />`;
                    }
                },
                {
                    data: 'UnitRate',
                    render: function (data) {
                        return `₹ ${parseFloat(data).toLocaleString("en-IN", { minimumFractionDigits: 2 })}`;
                    }
                },
                {
                    data: 'Amount',
                    render: function (data) {
                        return `₹ ${parseFloat(data).toLocaleString("en-IN", { minimumFractionDigits: 2 })}`;
                    }
                },
                {
                    data: null,
                    render: function () {
                        return `<button class="btn btn-sm btn-success save-item-btn">Save</button>`;
                    }
                }
            ],
            columnDefs: [
                { className: "text-center", targets: "_all" }
            ]

        });
    }

    // Save button handler inside table
    $(document).on("click", ".save-item-btn", function () {
        var row = $(this).closest("tr");
        var prItemId = itemTableUpdate.row(row).data().PRItemId;
        var requiredQuantity = row.find(".qty-input").val();

        $.ajax({
            url: '/Purchase/UpdateItemQuantitySP',
            type: 'POST',
            data: { PRItemId: prItemId, RequiredQuantity: requiredQuantity },
            success: function (res) {
                if (res.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Updated!',
                        text: 'Item updated successfully!',
                        showConfirmButton: false,
                        timer: 2000
                    }).then(() => {
                        // Close the Update Modal after SweetAlert
                        $('#updateModal').modal('hide');
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Failed!',
                        text: 'Failed to update!',
                        showConfirmButton: true
                    });
                }
            },
            error: function () {
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: 'Error while updating!',
                    showConfirmButton: true
                });
            }
        });
    });
</script>
