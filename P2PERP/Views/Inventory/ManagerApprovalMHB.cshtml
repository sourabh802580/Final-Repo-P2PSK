    // Attach Date Range Picker to "Added Date" filter
    $(document).on('focus', '#createdDateFilter', function () { // keep using your filter input
        if (!$(this).data('daterangepicker')) {
            $(this).daterangepicker({
                autoUpdateInput: false,
                opens: "center",
