            Swal.fire("⚠️ Warning", "Please add at least one item before sending for approval.", "warning");
            return;
        }

        // ✅ Prepare the payload
        let payload = {
            MRPCode: $('#editMRPCode').val(),
            ItemList: items
        };

        console.log("Payload:", JSON.stringify(payload));

        // 🔔 Confirm submission
