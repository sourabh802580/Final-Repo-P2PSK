                        let $ddl = $("#addSectionDropdown");
                        $ddl.empty().append('<option value="">-- Select Section --</option>');
                        $.each(data, function (i, item) {
                            $ddl.append('<option value="' + item.SectionCode + '">' + item.SectionName + '</option>');
